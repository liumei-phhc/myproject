package com.feicui.ssm3.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.feicui.ssm3.entity.Customer;
import com.feicui.ssm3.entity.CustomerDept;
import com.feicui.ssm3.entity.Dept;
import com.feicui.ssm3.entity.QueryVo;
import com.feicui.ssm3.service.CustomerService;

@Controller
@RequestMapping("cust")
public class CustomerController {
	@Autowired
	private CustomerService customerService;
	/**
	 * 查询所有用户
	 * @param model
	 * @return
	 */
	@RequestMapping("findCustomer")
	public String findCustomer(Model model){
		List<CustomerDept> list=customerService.findCustomer();
		model.addAttribute("list",list);
		return "list";
	}
	/**
	 * 查询部门表
	 */
	@RequestMapping("findept")
	public String findept(Dept dept,Model model){
		List<Dept> list=customerService.findept(dept);
		model.addAttribute("list", list);
		return "add";
	}
	/**
	 * 添加用户
	 */
	@RequestMapping("addcustomer")
	public String addCustomer(Customer customer){
		customerService.addCustomer(customer);
		return "redirect:/cust/findCustomer.do";
	}
	/**
	 * 删除customer
	 */
	@RequestMapping("deleteCutomer")
	public String deletecustomer(Integer id){
		customerService.deletecustomer(id);
		return "redirect:/cust/findCustomer.do";
	}
	/**
	 * 查询出一条
	 */
	@RequestMapping("findone")
	public ModelAndView findone(Integer id,Dept dept){
		ModelAndView mv=new ModelAndView();
		List<Customer> list=customerService.findone(id);
		mv.addObject("list", list);
		List<Dept> list1=customerService.findept(dept);
		mv.addObject("list1", list1);
		mv.setViewName("update");
		return mv;
	}
	
	/**
	 * 修改customer
	 */
	@RequestMapping("update")
	public String updateCustomer(Customer customer){
		customerService.updateCustomer(customer);
		return "redirect:/cust/findCustomer.do";
	}
	
	/**
	 * 批量删除
	 */
 	@RequestMapping("deleteAllUser")
 	public String deleteAllUser(QueryVo ids){
 		customerService.deleteAllUser(ids);
 		return "redirect:/cust/findCustomer.do";
 	}
}
