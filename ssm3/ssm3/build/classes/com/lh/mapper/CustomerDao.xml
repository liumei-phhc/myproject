<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.lh.mapper.CustomerDao">
  	<select id="selectAllCustomerDept" resultType="CustomerDept">
  		select cid,cname,cphone,cage,dname from customer,dept where customer.did=dept.did
  	</select>
  	<select id="selectOneCustomerDept" resultType="Customer">
  		select cid,cname,cphone,cage,did from customer where cid=#{id}
  	</select>
  	<insert id="addCustomer" parameterType="Customer">
  		insert into customer(cname,cphone,cage,did) values(#{cname},#{cphone},#{cage},#{did})
  	</insert>
  	<select id="findDept" parameterType="Dept" resultType="Dept">
  		select * from dept
  	</select>
  	<delete id="deleteCustomer" parameterType="int">
  		delete from customer where cid=#{id}
  	</delete>
  	<delete id="deleteAllCustomer" parameterType="int[]">
  		delete from customer where cid in 
  		<foreach separator="," open="(" close=")" item ="id" collection="array">
  	     	#{id}
  		</foreach>
  	</delete>
  	<update id="update" parameterType="Customer">
  		update customer set cname=#{cname},cphone=#{cphone},cage=#{cage},did=#{did} where cid=#{cid}
  	</update>
  </mapper>